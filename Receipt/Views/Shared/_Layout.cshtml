<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</head>
<body style="background-color: #d7d3d9">
    <div class="navbar navbar-fixed-top">
        <div class="container" style="background-color: #080707">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.location == "home")
                    {
                        <li class="menu selected">@Html.ActionLink("Начало", "Index", "Home")</li>
                    }
                    else
                    {
                        <li class="menu">@Html.ActionLink("Начало", "Index", "Home")</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (ViewBag.location == "companies")
                        {
                            <li class="menu selected">@Html.ActionLink("Фирми", "Index", "Companies")</li>
                        }
                        else
                        {
                            <li class="menu">@Html.ActionLink("Фирми", "Index", "Companies")</li>
                        }

                        if (ViewBag.location == "articule")
                        {
                            <li class="menu selected">@Html.ActionLink("Артикули", "Index", "Articule")</li>
                        }
                        else
                        {
                            <li class="menu"> <a disabled> Артикули </a> </li>
                        }

                        if (ViewBag.location == "receipt")
                        {
                            <li class="menu selected">@Html.ActionLink("К.Бележки", "Index", "Receipt")</li>
                        }
                        else
                        {
                            <li class="menu">@Html.ActionLink("К.Бележки", "Index", "Receipt")</li>
                        }
                        if (ViewBag.location == "worklist")
                        {
                            <li class="menu selected">@Html.ActionLink("Р. Листи", "Index", "Worklist")</li>
                        }
                        else
                        {
                            <li class="menu">@Html.ActionLink("Р. Листи", "Index", "Worklist")</li>
                        }
                        if (ViewBag.location == "pdf")
                        {
                            <li class="menu selected">@Html.ActionLink("PDF", "Index", "pdf")</li>
                        }
                        else
                        {
                            <li class="menu">@Html.ActionLink("PDF", "Index", "pdf")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: #f3eef6; min-height: 800px">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
</body>
</html>
