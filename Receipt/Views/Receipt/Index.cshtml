@model List<Receipt.Models.CompanyViewModel>
@{
    ViewBag.Title = "Бележки";
}

<div class="container">
    <div class="row" style="padding-top:10px;">
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Касова бележка</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label"> Фирма </label>
                        <div>
                            <div class="input-group-btn select" id="select1">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <span class="selected">Избери фирма</span>
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu option" role="menu">
                                    @foreach (var c in Model)
                                    {
                                    <li id="@c.CompanyId"><a href="javascript:void(0)">@c.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="control-label"> Дата </label>
                                <div>
                                    <div class='input-group date' id='datetimepicker1'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label"> Оператор </label>
                                <div>
                                    <div class="input-group-btn select" id="select2">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="selected">Избери</span>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu option" role="menu">
                                            <li id="op1"><a href="javascript:void(0)">01 Оператор</a></li>
                                            <li id="op1"><a href="javascript:void(0)">02 Оператор</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" id="dArticle">
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="control-label"> Артикул </label>
                                <div>
                                    <div class="input-group-btn select" id="select3">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="selected" idd="sArticle">Избери</span>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu option" id="uArticle" role="menu">
                                            <li id="ar1"><a href="javascript:void(0)">Услуги</a></li>
                                            <li id="ar2"><a href="javascript:void(0)">Стоки</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <label class="control-label"> Стойност </label>
                                <div>
                                    <input type="text" required="" placeholder="42.00" class="form-control" id="amount" />
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <label class="control-label"> &nbsp; </label>
                                <div>
                                    <a style="float:right" class="btn btn-default btn-md" onclick="addArticle()" href="javascript:void(0)">
                                        <span class="glyphicon glyphicon-euro">
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Артикул</th>
                                        <th style="text-align:right">Стойност</th>
                                        <th style="text-align:right">Изтрии</th>
                                    </tr>
                                </thead>
                                <tbody id="tArticle"></tbody>
                            </table>
                        </div>
                        <div class="col-lg-1"></div>

                    </div>
                </div>
               
            </div>
        </div>

        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Преглед</div>
                <div class="panel-body">
                    <div style="background-color: antiquewhite; padding:0; margin:0; width: 20em">
                        <div style="text-align: center">Папур груп ООД</div>
                        <div style="text-align: center">ЕИК: 563456456</div>
                        <div style="text-align: center">гр. Горна Оряховица</div>
                        <div style="text-align: center">ул. Бузлоджа #2 ET.3</div>
                        <div style="width:100%">
                            <div style="width:15%; text-align:left; display: inline-block;">
                                01
                            </div>
                            <div style="width:70%; text-align:center; display: inline-block;">
                                ОПЕРАТОР
                            </div>
                            <div style="width:15%; display: inline-block;">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script type="text/javascript">
    function deleteArticle(obj)
    {
        $(obj).parent().parent().remove();
    }

    function vArticle()
    {
        var res = true;
        var a = $('[idd="sArticle"]').text();
        var s = $('#amount').val();
        if (a == '' || s == '')
        {
            $('#dArticle').addClass('has-error')
            res = false;
        }
        return res;
    }

    function addArticle() {
        if (!vArticle())
        {
            return false;
        }
        var a = $('[idd="sArticle"]').text();
        var s = $('#amount').val();
        var html = '<tr>' +
            '<th scope="row" class="nom"></th>' +
            '<td>{a}</td>' +
            '<td align="right">{s}</td>' +
            '<td align="centar"> <a style="float:right" class="btn btn-default btn-sm" onclick="deleteArticle(this)" href="javascript:void(0)">' +
            '<span class="glyphicon glyphicon-trash" >' +
            '</span>' +
            '</a></td>' +
            '</tr>';
        html = html.replace('{a}', a).replace('{s}', s);
        $('#tArticle').append(html);
        $('#dArticle').removeClass('has-error');
        $('#dArticle').addClass('has-success');
    }
    $(function () {
        $('#datetimepicker1').datetimepicker({
            locale: 'bg'
        });

        $("#amount").on("input", function () {
            $('#dArticle').removeClass('has-error');
            $('#dArticle').removeClass('has-success');
            // allow numbers, a comma or a dot
            var v = $(this).val(), vc = v.replace(/[^0-9\.]/, '');
            if (v !== vc)
                $(this).val(vc);
        });

        $('body').on('click', '.option li', function () {
            $('#dArticle').removeClass('has-error');
            $('#dArticle').removeClass('has-success');
            var i = $(this).parents('.select').attr('id');
            var v = $(this).children().text();
            var o = $(this).attr('id');
            $('#' + i + ' .selected').attr('id', o);
            $('#' + i + ' .selected').text(v);
        });

    });

</script>

<style type="text/css">
    .select button {
        width: 100%;
        text-align: left;
    }

    .select .caret {
        position: absolute;
        right: 10px;
        margin-top: 10px;
    }

    .select:last-child > .btn {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    .selected {
        padding-right: 10px;
    }

    .option {
        width: 100%;
    }
</style>
