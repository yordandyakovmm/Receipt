@model Receipt.DataContext.Pdf

<div class="container">

    <div class="row">
        <div class="col-lg-12" style="min-height:300px;">
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <div id="qr" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 text-right">
            <a class="btn btn-success" onclick="" href="@Model.url" target="_blank">
                <span class="glyphicon glyphicon-download">
                </span>
                Преглед
            </a>

        </div>
        <div class="col-lg-6 text-left">
            <a class="btn btn-danger" href="/pdf/download/?file=@Model.Name" >
                <span class="glyphicon glyphicon-download">
                </span>
                Свали
            </a>
        </div>
    </div>
</div>

<style type="text/css">
    .glyphicon {
        margin-right: 5px;
    }
</style>

<script type="text/javascript" src="~/Scripts/jquery.qrcode.js"></script>
<script type="text/javascript" src="~/Scripts/qrcode.js"></script>

<script>

    var options = {
        // render method: 'canvas', 'image' or 'div'
        render: 'convas',

        // version range somewhere in 1 .. 40
        minVersion: 1,
        maxVersion: 40,

        // error correction level: 'L', 'M', 'Q' or 'H'
        ecLevel: 'Q',

        // offset in pixel if drawn onto existing canvas
        left: 0,
        top: 0,

        // size in pixel
        size: 500,

        // code color or image element
        fill: '#567812',

        // background color or image element, null for transparent background
        background: '#efefef',

        // content
        text: '@ViewBag.link',

        // corner radius relative to module width: 0.0 .. 0.5
        radius: 0,

        // quiet zone in modules
        quiet: 0,

        // modes
        // 0: normal
        // 1: label strip
        // 2: label box
        // 3: image strip
        // 4: image box
        mode: 0,

        mSize: 0.1,
        mPosX: 0.5,
        mPosY: 0.5,

        label: 'no label',
        fontname: 'sans',
        fontcolor: '#AAA',

        image: null
    };
    $('#qr').qrcode(options);
</script>



